extends layout

block content
    .container.py-5.d-flex.align-items-center.justify-content-center
        .card.text-center
            .card-body
                form.form-signin.justify-content-center.align-items-center.h-5
                    input#inputEmail.form-control.my-3(type='email' placeholder='Email address' required autofocus)
                    input#inputPassword.form-control.my-3(type='password' placeholder='Password' required)
                    button.btn.btn-lg.btn-primary.mb-3(type='submit') Sign in
    

    
    